{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": "cloudformation:*",
            "Resource": "*"
        },
        {
            "Effect": "Allow",
            "Action": "ec2:*",
            "Resource": "*"
        },
        {
            "Effect": "Allow",
            "Action": [
                "autoscaling:Describe*",
                "autoscaling:Create*",
                "autoscaling:Delete*",
                "autoscaling:Update*"
            ],
            "Resource": "*"
        },
        {
            "Effect": "Allow",
            "Action": "eks:*",
            "Resource": "*"
        },
        {
            "Effect": "Allow",
            "Action": [
                "iam:List*",
                "iam:Get*",
                "iam:Create*",
                "iam:Delete*",
                "iam:Update*",
                "iam:Put*",
                "iam:TagRole",
                "iam:AttachRolePolicy",
                "iam:PassRole",
                "iam:TagOpenIDConnectProvider"
            ],
            "Resource": "*"
        },
        {
            "Effect": "Allow",
            "Action": [
                "ssm:Get*",
                "ssm:List*"
            ],
            "Resource": "*"
        }
    ]
}